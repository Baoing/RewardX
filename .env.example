# Shopify App 配置
SHOPIFY_API_KEY=xxxx
SHOPIFY_API_SECRET=xxxx

# 应用基本信息
APP_NAME='Example App'
APP_VERSION=1.0.0

# 数据库
DATABASE_URL=file:./prisma/dev.sqlite

# 默认配置
VITE_DEFAULT_LANG=zh
VITE_DEFAULT_THEME=light

# 功能开关
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_MULTI_LANGUAGE=true
VITE_DEBUG_MODE=true

# App Embed UUID（从主题编辑器 URL 获取）
APP_EMBED_UUID=your-app-embed-uuid

# 管理员 API 密钥（用于手动开通套餐、管理折扣等）
# 生成方式: openssl rand -base64 32
ADMIN_SECRET=your-secure-random-string-here

# Shopify Billing 配置
# 是否在生产环境启用真实计费（测试环境会创建测试订阅）
ENABLE_REAL_BILLING=false

# 开发模式配置
# 设置为 true 时跳过 Shopify Billing API（用于开发测试）
SKIP_SHOPIFY_BILLING=true
